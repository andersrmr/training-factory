{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["status", "checks"],
  "properties": {
    "status": {"type": "string", "enum": ["pass", "fail"]},
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["prompt", "answer"],
        "properties": {
          "prompt": {"type": "string"},
          "answer": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
