{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Lab",
  "type": "object",
  "required": ["title", "objective", "prerequisites", "steps", "checkpoints"],
  "properties": {
    "title": { "type": "string", "minLength": 3 },
    "objective": { "type": "string", "minLength": 10 },
    "prerequisites": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "setup": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "steps": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["step", "instruction"],
        "properties": {
          "step": { "type": "integer", "minimum": 1 },
          "instruction": { "type": "string", "minLength": 5 },
          "expected_output": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "checkpoints": {
      "type": "array",
      "minItems": 2,
      "items": { "type": "string", "minLength": 5 }
    }
  },
  "additionalProperties": false
}

